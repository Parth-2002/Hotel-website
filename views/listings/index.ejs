<% layout("layouts/boilerplate") %>

<style>
    #filters {
        margin-top: 0.5rem;
        display: flex;
        flex-wrap: wrap;
        align-items: center;
    }
    .filter-icons {
        display: flex;
        flex-wrap: wrap;
        align-items: center;
        margin-left: 3rem;
        width: 70%;
    }
    .filter {
        text-decoration: none;
        color: black;
        text-align: center;
        padding: 0rem 0.5rem 0rem 0.5rem;
        margin-right: 1rem;
        opacity: 0.7;

    }
    .filter:hover {
        opacity: 1;
        cursor: pointer;
    }
    .filter p {
        font-size: 0.9rem;
    }
    .tax-toggle {
        border: 1px solid black;;
        border-radius: 0.7rem;
        height: 3.25rem;
        padding: 1rem;
        margin-left: 3rem;
        display: flex;
        align-items: center;
    }

    @media (max-width: 768px) {
    #filters {
        flex-direction: column;
        align-items: flex-start;
    }

    .filter-icons {
        width: 100%;
        margin-left: 0;
        justify-content: flex-start;
    }

    .filter {
        margin-bottom: 0.5rem;
        margin-right: 0.5rem;
        padding: 0.3rem 0.5rem;
    }

    .tax-toggle {
        margin-left: 0;
        margin-top: 1rem;
        width: 100%;
        justify-content: center;
    }
}

</style>

